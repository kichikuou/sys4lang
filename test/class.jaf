class C {
public:
	C() { this.m = 1; }
	void set(int x = 42);
	int m;
	const int k = 10;
};

C::set(int x) {
	m = x;
	assert(k == 10);
}

class C2 {
public:
	int m;
	C2();
	void set() { this.m = 2; }
};

C2::C2() {
	set();
}

class some_namespace::C3 {
public:
	C3();
	array@int a[42];
	int len;
};

some_namespace::C3::C3() {
	this.len = this.a.Numof();
}

int main()
{
	C f;
	assert(f.k == 10);
	assert(f.m == 1);
	f.set();
	assert(f.m == 42);

	C2 c2;
	assert(c2.m == 2);

	some_namespace::C3 c3;
	assert(c3.len == 42);

	return 0;
}
